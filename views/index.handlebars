<div class="jumbotron jumbotron-fluid"
  style="background-image: url(/assets/images/joshua-kantarges-wO4CyWnIzz4-unsplash.jpg);background-size: contain;">
  <div class="container">
    <h1 class="display-1" style="color:aqua;font-family:Verdana, Geneva, Tahoma, sans-serif;">Burgers!</h1>
  </div>
</div>

<div class="container">
  <div class="card-columns">
    <div class="card">
      <h3 class="card-header" style="background-color:aqua;">Burgers as yet undevoured!</h3>
      <div class="card-body" style="background-color: wheat">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
        </ul>
      </div>
    </div>

    <div class="card">
      <h3 class="card-header" style="background-color:aqua;">Burgers that have been devoured!</h3>
      <div class="card-body" style="background-color: wheat">
        <ul class="list-group list-group-flush">
          {{#each burgers}}
          {{#if devoured}}
          {{>burgers/burger-block devour=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>

    <div class="card">
      <h3 class="card-header" style="background-color:aqua;">Add a Burger</h3>
      <div class="card-body" style="background-color: wheat">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <div class="form-group">
          <label for="sleepy">Has been Consumed:</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured!<br>
          <input type="radio" name="devoured" value="0"> Awaiting Consumption
        </div>
        <button type="submit" class="btn btn-outline-primary" value="Add Burger">Add Burger</button>
      </div>
    </div>
  </div>
</div>